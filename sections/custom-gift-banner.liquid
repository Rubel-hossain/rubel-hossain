
<section class="custom-gift-banner">
  
  <!-- Navigation Bar -->
  <nav class="banner-navbar">
    <div class="navbar-content">
      <!-- Brand -->
      <a href="{{ section.settings.brand_link | default: '/' }}" class="brand-name">
        {{ section.settings.brand_name | default: 'TISSO VISON' }}
      </a>

      <!-- Center text -->
      <p class="nav-center-text">{{ section.settings.nav_text | default: 'Find the ideal gift for your loved ones.' }}</p>

      <!-- CTA button -->
      {% if section.settings.nav_button_text != blank %}
        <a href="{{ section.settings.nav_button_link | default: '#' }}" class="nav-button">
          <span>{{ section.settings.nav_button_text | default: 'CHOOSE GIFT' }}</span>
          <span class="nav-button-arrow">→</span>
        </a>
      {% endif %}

      <!-- Hamburger Menu (Mobile) -->
      <button class="hamburger-menu" 
              aria-label="Toggle menu" 
              aria-expanded="false"
              onclick="toggleMobileMenu()">
        <span class="hamburger-line"></span>
        <span class="hamburger-line"></span>
        <span class="hamburger-line"></span>
      </button>
    </div>
  </nav>

  <!-- Mobile Menu Overlay -->
  <div class="mobile-menu" id="mobileMenu">
    <div class="mobile-menu-header">
      <a href="{{ section.settings.brand_link | default: '/' }}" class="brand-name">
        {{ section.settings.brand_name | default: 'TISSO VISON' }}
      </a>
      <button class="close-menu" 
              aria-label="Close menu"
              onclick="toggleMobileMenu()">
        ×
      </button>
    </div>
    
    <div class="mobile-menu-content">
      <p class="mobile-menu-text">
        {{ section.settings.mobile_menu_text | default: 'Find the ideal gift for your loved ones.' }}
      </p>
      
      {% if section.settings.mobile_menu_button_text != blank %}
        <a href="{{ section.settings.mobile_menu_button_link | default: '#' }}" 
           class="banner-button"
           style="background-color: {{ section.settings.mobile_button_color | default: '#FFE135' }}; color: {{ section.settings.mobile_button_text_color | default: '#000' }};">
          {{ section.settings.mobile_menu_button_text }} →
        </a>
      {% endif %}
    </div>
  </div>

  <!-- Main Banner Content -->
  <div class="banner-main">
    <div class="banner-content">
      {% if section.settings.banner_title != blank %}
        <h1 class="banner-title">{{ section.settings.banner_title }}</h1>
      {% endif %}
      
      {% if section.settings.banner_description != blank %}
        <p class="banner-description">{{ section.settings.banner_description }}</p>
      {% endif %}
      
      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link | default: '#' }}" 
           class="banner-button"
           style="background-color: {{ section.settings.button_color | default: '#000' }}; color: {{ section.settings.button_text_color | default: '#fff' }};">
          <span>{{ section.settings.button_text }}</span>
          <span class="banner-button-arrow">→</span>
        </a>
      {% endif %}
    </div>

    <!-- Banner Illustration Images -->
    <div class="banner-illustrations">
      {% if section.settings.illustration_top != blank %}
        <img src="{{ section.settings.illustration_top | img_url: 'master' }}" 
             alt="{{ section.settings.illustration_top_alt | default: 'Decorative illustration' }}" 
             class="illustration-top"
             loading="eager"
             width="auto"
             height="auto"
            />
      {% endif %}
      {% if section.settings.illustration_right != blank %}
        <img src="{{ section.settings.illustration_right | img_url: 'master' }}" 
             alt="{{ section.settings.illustration_right_alt | default: 'Decorative illustration' }}" 
             class="illustration-right"
             loading="eager"
             width="auto"
             height="auto"
            >
      {% endif %}
    </div>
  </div>

  <!-- Footer Text -->
  {% if section.settings.footer_text != blank %}
    <div class="banner-footer">
      {{ section.settings.footer_text }}
    </div>
  {% endif %}
</section>

<script>
  // Mobile menu toggle functionality
  function toggleMobileMenu() {
    const mobileMenu = document.getElementById('mobileMenu');
    const hamburgerButton = document.querySelector('.hamburger-menu');
    
    if (mobileMenu.classList.contains('active')) {
      mobileMenu.classList.remove('active');
      hamburgerButton.setAttribute('aria-expanded', 'false');
      document.body.style.overflow = 'auto';
    } else {
      mobileMenu.classList.add('active');
      hamburgerButton.setAttribute('aria-expanded', 'true');
      document.body.style.overflow = 'hidden';
    }
  }

  // Close mobile menu when clicking outside
  document.addEventListener('click', function(event) {
    const mobileMenu = document.getElementById('mobileMenu');
    const hamburgerButton = document.querySelector('.hamburger-menu');
    
    if (!mobileMenu.contains(event.target) && !hamburgerButton.contains(event.target)) {
      if (mobileMenu.classList.contains('active')) {
        toggleMobileMenu();
      }
    }
  });

  // Handle escape key to close menu
  document.addEventListener('keydown', function(event) {
    if (event.key === 'Escape') {
      const mobileMenu = document.getElementById('mobileMenu');
      if (mobileMenu.classList.contains('active')) {
        toggleMobileMenu();
      }
    }
  });

  // Prevent body scroll when menu is open
  window.addEventListener('resize', function() {
    if (window.innerWidth >= 768) {
      const mobileMenu = document.getElementById('mobileMenu');
      if (mobileMenu.classList.contains('active')) {
        toggleMobileMenu();
      }
    }
  });
</script>

<!-- Custom Gift Banner Section -->
<style>
  .custom-gift-banner {
    /* Controls how much of the banner the top illustration occupies */
    --illus-top: 50%;

    position: relative;
    width: 100%;
    min-height: 100vh;
    background-color: #f5f5f5;
    display: flex;
    flex-direction: column;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    overflow: hidden;
  }

  .banner-navbar {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 100vw; /* full-bleed navbar */
    z-index: 100;
    padding: 14px 24px;
    background: rgba(255,255,255,0.98);
  }

  .navbar-content {
    display: grid;
    grid-template-columns: auto 1fr auto; /* brand | center text | cta */
    align-items: center;
    gap: 16px;
    width: 100%;
    max-width: none;
    margin: 0;
  }

  .brand-name {
    font-size: 20px;
    font-weight: 700;
    letter-spacing: 1.5px;
    color: #000;
    text-decoration: none;
    text-transform: uppercase;
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 30px;
  }

  .nav-center-text {
    font-size: 14px;
    color: #000;
    margin: 0;
    font-weight: 400;
    text-align: center;
  }

  .nav-button {
    position: relative;
    display: inline-flex;
    align-items: center;
    background: #FFE500;
    color: #000;
    padding: 10px 24px;
    text-decoration: none;
    font-weight: 600;
    font-size: 13px;
    letter-spacing: 1px;
    text-transform: uppercase;
    border: none;
    cursor: pointer;
    overflow: hidden;
    transition: all 0.3s ease;
    z-index: 1;
  }

  .nav-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 0;
    height: 100%;
    background: #000;
    transition: width 0.3s ease;
    z-index: -1;
  }

  .nav-button:hover::before {
    width: 100%;
  }

  .nav-button:hover {
    color: #ffeb3b;
    transform: translateY(-1px);
  }

  .nav-button-arrow {
    display: inline-block;
    margin-left: 8px;
    transition: transform 0.3s ease;
  }

  .nav-button:hover .nav-button-arrow {
    transform: translateX(3px);
  }

  .hamburger-menu {
    display: none;
    flex-direction: column;
    cursor: pointer;
    padding: 0.5rem;
    background: none;
    border: none;
    position: absolute;
    left: 8px;
    top: 50%;
    transform: translateY(-50%);
  }

  .hamburger-line {
    width: 25px;
    height: 3px;
    background-color: #000;
    margin: 3px 0;
    transition: 0.3s;
  }

  .mobile-menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.98);
    z-index: 1000;
    transform: translateX(-100%);
    transition: transform 0.3s ease-in-out;
    display: flex;
    flex-direction: column;
  }

  .mobile-menu.active {
    transform: translateX(0);
  }

  .mobile-menu-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 20px;
    border-bottom: 1px solid #eee;
    background: #ff69b4;
  }

  .close-menu {
    background: none;
    border: none;
    font-size: 2rem;
    cursor: pointer;
    padding: 0.5rem;
    color: #000;
  }

  .mobile-menu-content {
    padding: 3rem 2rem;
    text-align: center;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .mobile-menu-text {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    color: #333;
    line-height: 1.5;
  }

  .banner-main {
    flex: 1;
    position: relative;
    display: flex;
    align-items: center;
    padding: 120px 50px 80px;
    max-width: 1440px;
    margin: 0 auto;
    width: 100%;
    min-height: 100vh;
  }

  .banner-content {
    max-width: 500px;
    z-index: 50;
    color: #000;
    padding-left: 50px;
  }

  .banner-title {
    font-size: 80px;
    font-weight: 800;
    color: #000;
    margin: 0 0 30px 0;
    line-height: 0.9;
    letter-spacing: -2px;
  }

  .banner-description {
    font-size: 17px;
    color: #333;
    margin: 0 0 40px 0;
    line-height: 1.5;
    max-width: 400px;
  }

  .banner-button {
    display: inline-flex;
    align-items: center;
    padding: 15px 35px;
    background: #000;
    color: #fff;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    font-size: 14px;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  .banner-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0,0,0,0.15);
  }

  .banner-button-arrow {
    margin-left: 10px;
    transition: transform 0.3s ease;
  }

  .banner-button:hover .banner-button-arrow {
    transform: translateX(4px);
  }

  .banner-footer {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    font-size: 0.9rem;
    color: #666;
    text-align: center;
    z-index: 50;
    letter-spacing: 1px;
    font-weight: 500;
  }

  /* Banner Illustration Images */
  .banner-illustrations {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 100vw; /* span full viewport width to remove side padding gaps */
    max-width: none;
    height: 100%;
    pointer-events: none;
    z-index: 1;
  }

  .illustration-top {
    position: absolute;
    top: 0;
    right: 0; /* anchor to the right edge to eliminate gap */
    left: auto;
    width: 100%;
    height: var(--illus-top);
    object-fit: cover;
    object-position: right bottom; /* align artwork to the right */
  }

  .illustration-right {
    position: absolute;
    right: 0;
    top: var(--illus-top); /* start exactly where the top image ends */
    width: 50%;
    height: calc(100% - var(--illus-top));
    object-fit: cover;
    object-position: left center;
  }

  /* Desktop Styles */
  @media (min-width: 768px) {
    .hamburger-menu {
      display: none;
    }

    .nav-right {
      display: flex;
    }

    .brand-name {
      font-size: 28px;
    }

    .banner-title {
      font-size: 96px;
    }

    .banner-main {
      padding: 6rem 4rem;
    }
  }

  /* Mobile Styles */
  @media (max-width: 767px) {
    .hamburger-menu {
      display: flex;
    }

    /* Hide CTA on small screens to keep navbar clean */
    .nav-button {
      display: none;
    }

    .banner-main {
      padding: 20px;
      text-align: center;
      min-height: calc(100vh - 50px);
    }

    .banner-content {
      max-width: 100%;
    }

    .banner-title {
      font-size: 28px;
      margin-bottom: 15px;
    }

    .banner-description {
      font-size: 14px;
      max-width: 100%;
      margin-bottom: 25px;
    }

    .banner-button {
      padding: 10px 20px;
      font-size: 12px;
    }

    .banner-footer {
      font-size: 0.8rem;
      padding: 0 1rem;
      bottom: 1rem;
    }

    .brand-name {
      font-size: 16px;
    }

    /* On mobile we stack the right illustration below the top one */
    .custom-gift-banner { --illus-top: 50%; }

    .illustration-top {
      height: var(--illus-top);
      right: 0;
      left: auto;
      object-position: right bottom;
    }

    .illustration-right {
      left: 0;
      right: auto;
      width: 100%;
      top: var(--illus-top);
      height: calc(100% - var(--illus-top));
    }
  }
</style>


